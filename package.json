  "dependencies": {
    "@types/sqlite3": "^3.1.6",
    "bignumber.js": "^9.0.0",
    "cexio-api-node": "git+https://github.com/codlab/cexio-api-node.git",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "sqlite3": "^4.1.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/node": "^13.5.0",
